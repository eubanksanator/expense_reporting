<h1>Expense Forms</h1>

<div class="row">
  <div class="col-md-12">
    <div class="">
      <%= link_to 'Cab fare', new_cab_fare_path  %> |
      <%= link_to 'Car rentals', new_car_rental_path %> |
      <%= link_to 'Travel cost', new_travel_cost_path %>
    </div>
  </div>
</div>

<hr>

<div class="row ex-form">
  <div class="col-md-8">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>New Cab Fare Expense</h4></div>
        <div class="panel-body">
          <%= render 'cab_fares/form', :@cab_fare => CabFare.new %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>New Car Rental Expense</h4></div>
        <div class="panel-body">
          <%= render 'car_rentals/form', :@car_rental => CarRental.new %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>New Travel Cost Expense</h4></div>
        <div class="panel-body">
          <%= render 'travel_costs/form', :@travel_cost => TravelCost.new %>
        </div>
      </div>
    </div>
  </div>
</div>

