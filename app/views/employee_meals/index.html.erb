<h1>Listing Employee Meals</h1>

<table>
  <thead>
    <tr>
      <th>Occurence</th>
      <th>Breakfast</th>
      <th>Lunch</th>
      <th>Dinner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_meals.each do |employee_meal| %>
      <tr>
        <td><%= employee_meal.occurence %></td>
        <td><%= employee_meal.breakfast %></td>
        <td><%= employee_meal.lunch %></td>
        <td><%= employee_meal.dinner %></td>
        <td><%= link_to 'Show', employee_meal %></td>
        <td><%= link_to 'Edit', edit_employee_meal_path(employee_meal) %></td>
        <td><%= link_to 'Destroy', employee_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

